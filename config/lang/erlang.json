{
    "extensions": [".erl"],
	"grammarConfig": {
	  "type": "antlr",
	  "grammarFiles": [
		"../grammars/erlang/Erlang.g4"
	  ],
	  "utilJavaFiles": [],
	  "startRule": "forms"
	},
	"processConfig": {
		"splitConfig": {
			"splitRules": [
				"form",
				"functionClause",
				"crClause"
			]
		},
		"normalizeConfig": {
			"mapping": {
				"tokString": "\"S\"",
				"tokChar": "'C'",
				"tokFloat": "N"
			},
			"indexedMapping": {
				"tokVar": "$V"
			},
			"ignoreRules": [
				"EOF"
			]
		}
	}
}
